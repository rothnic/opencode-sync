{
  "defaults": {
    "environment": "copilot",
    "secretName": "OPENCODE_AUTH_BUNDLE",
    "sync": {
      "auth": {
        "presets": ["antigravity", "auth"]
      },
      "agents": true,
      "commands": true,
      "config": {
        "mode": "merge",
        "model": "google/antigravity-gemini-3-flash",
        "plugins": [
          "opencode-antigravity-auth@1.2.8"
        ],
        "providers": {
          "google": true
        }
      }
    }
  },
  "targets": {
    "default": {
      "repo": "rothnic/opencode-sync",
      "sync": {}
    },
    "gastown": {
      "repo": "rothnic/gastown",
      "sync": {
        "config": {
          "plugins": [
            "opencode-antigravity-auth@1.2.8",
            "@opencode-ai/github"
          ]
        }
      }
    }
  }
}
